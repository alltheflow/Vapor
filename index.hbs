{{!< default}}

{{#contentFor "meta"}}

  <!-- Open Graph Meta Tags -->
  <meta property="og:type" content="website"/>
  <meta property="og:title" content="All The Flow Blog"/>
  <meta property="og:description" content="Cocoa, reactive programming, Swift, DX & coding in general"/>
  <meta property="og:site_name" content="All The Flow"/>
  <meta property="og:url" content="https://alltheflow.com/"/>
  <meta property="og:image" content="{{asset "img/logo_square.png"}}"/>
  <meta property="fb:admins" content="100004324051806"/>

  <!-- Twitter Card Meta Tags -->
  <meta name="twitter:card" content="summary"/>
  <meta name="twitter:title" content="All The Flow"/>
  <meta name="twitter:description" content="Cocoa, reactive programming, Swift, DX & coding in general"/>
  <meta name="twitter:image" content="{{asset "img/logo_square.png"}}"/>
  <meta name="twitter:site" content="@_alltheflow"/>
{{/contentFor}}

<main class="content" role="main">

    {{#foreach posts}}

    <article class="preview">
        <header>
            <h1 class="post-title"><a href="{{url}}">{{{title}}}</a></h1>
            <div class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time></div>
        </header>
        <section class="post-excerpt">
            <p>{{excerpt}}&hellip;</p>
            <p class="readmore"><a href="{{url}}">Read this article <i class="fa fa-chevron-circle-right"></i></a></p>
        </section>
    </article>

    {{/foreach}}

    {{pagination}}

</main>
